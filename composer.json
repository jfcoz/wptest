{
  "name": "jfcoz/mywp",
  "description": "my website",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    }
  ],
  "config"      : {
    "vendor-dir": "wp-content/vendor"
  },
  "require": {
    "php": ">=5.4",
    "johnpbloch/wordpress": "5.9.3",
    "wp-cli/wp-cli-bundle": "*",
    "wpackagist-plugin/advanced-custom-fields": "*",
    "wpackagist-plugin/flush-opcache": "*",
    "wpackagist-plugin/posts-to-posts": "1.4.x",
    "wpackagist-plugin/wordpress-seo":">=7.0.2",
    "wpackagist-plugin/wp-nested-pages": "*",
    "wpackagist-plugin/acf-to-wp-api": "*",
    "wpackagist-plugin/custom-post-type-ui": "*",
    "wpackagist-plugin/simple-custom-post-order": "*",
    "wpackagist-plugin/wordpress-importer": "*",
    "wpackagist-plugin/wp-rest-api-v2-menus": "*",
    "wpackagist-plugin/jwt-authentication-for-wp-rest-api": "*",
    "wpackagist-plugin/wp-all-import": "*",
    "wpackagist-plugin/wp-maximum-upload-file-size": "*",
    "wpackagist-plugin/contact-form-7": "*",
    "wpackagist-plugin/flamingo": "*",
    "wpackagist-plugin/redirection": "*",
    "wpackagist-theme/generatepress":"*"
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
      "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "scripts": {
    "post-install-cmd": [
      "cp wp/index.php ./index.php",
      "sed -i \"s/\\/wp-blog-header/\\/wp\\/wp-blog-header/g\" index.php"
    ]
  }
}
